#checkout.modal
	.modal-dialog
		.modal-content
			.modal-header
				h5.modal-title Rendelési adatok megadása
				button.close(@click="close")
					| ×
			.modal-body
				form
					.form-group
						label(for="name") Név:
						input.form-control(type="text", id="name",v-model="name")
					.form-group
						label(for="name") Cím:
						input.form-control(type="text", id="address", v-model="address")
					.form-group
						label(for="name") Telefon:
						input.form-control(type="text", id="phone",v-model="phone")
			.modal-footer
				button.btn.btn-danger(@click="close") Mégsem
				button.green.btn.btn-primary(type="submit" @click="postCart") Rendelés leadása

